{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "name": "root",
  "version": "2.10.0",
  "description": "一个基于React的通用组件库，这个是在平时做的项目中沉淀出来的公共组件，包括UI、功能和其他",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "link": "lerna link",
    "changed": "lerna changed",
    "list": "lerna list",
    "publish-packages": "lerna publish",
    "publish-form-package": "lerna publish from-package",
    "publish:next": "lerna publish --dist-tag next",
    "publish:beta": "lerna publish --dist-tag beta",
    "publish:alpha": "lerna publish --dist-tag alpha",
    "changelog": "lerna version --conventional-commits",
    "release": "lerna version --conventional-commits --create-release github",
    "buildpackages": "lerna run buildpackage",
    "buildumd": "node scripts/buildumd.js",
    "generatorchangelog": "lerna run generatorchangelog",
    "init:husky": "npx husky add .husky/pre-commit \"npm run lint-staged\"",
    "lint": "npm run lint:js && npm run lint:style && npm run lint:prettier",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx ",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./packages/**/src && npm run lint:style",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./packages/**/src",
    "lint:prettier": "check-prettier lint",
    "lint:style": "stylelint --fix \"packages/**/src/**/*.less\" --syntax less",
    "prepare": "husky install",
    "prettier": "prettier -c --write \"**/*\"",
    "prettier-json": "prettier -c --write \"**/*.json\""
  },
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,jsx,ts,tsx}": "npm run lint-staged:js"
  },
  "author": "playerljc <playerljc@163.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/playerljc/adhere"
  },
  "bugs": {
    "url": "https://github.com/playerljc/adhere/issues"
  },
  "license": "ISC",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@umijs/fabric": "^3.0.0",
    "core-js": "^3.27.1",
    "cz-conventional-changelog": "^3.3.0",
    "cz-conventional-changelog-zh": "^0.0.2",
    "eslint": "^8.31.0",
    "eslint-plugin-comments": "^1.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.2.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-declaration-block-no-ignored-properties": "^2.6.0",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.3",
    "lerna": "^6.3.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "stylelint": "^14.16.1",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "postcss": "^8.4.20",
    "postcss-less": "^6.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-zh",
      "defaultType": "[新增功能]",
      "types": {
        "feat": {
          "description": "一个新功能",
          "title": "Features"
        },
        "fix": {
          "description": "一个bug",
          "title": "Bug Fixes"
        },
        "docs": {
          "description": "文档增删改",
          "title": "Documentation"
        },
        "style": {
          "description": "样式修改(空白、格式、缺少分号等)",
          "title": "Styles"
        },
        "refactor": {
          "description": "既不修复bug也不添加新功能的更改",
          "title": "Code Refactoring"
        },
        "perf": {
          "description": "性能优化",
          "title": "Performance Improvements"
        },
        "test": {
          "description": "增加测试",
          "title": "Tests"
        },
        "build": {
          "description": "影响构建系统或外部依赖项的更改(示例范围:gulp、broccoli、npm)",
          "title": "Builds"
        },
        "ci": {
          "description": "对CI配置文件和脚本的更改(示例范围:Travis, Circle, BrowserStack, SauceLabs)",
          "title": "Continuous Integrations"
        },
        "chore": {
          "description": "除src目录或测试文件以外的修改",
          "title": "Chores"
        },
        "revert": {
          "description": "回退历史版本",
          "title": "Reverts"
        },
        "conflict": {
          "description": "修改冲突",
          "title": "Conflict"
        },
        "font": {
          "description": "字体文件更新",
          "title": "Fonts"
        },
        "delete": {
          "description": "删除文件",
          "title": "Delete Files"
        },
        "stash": {
          "description": "暂存文件",
          "title": "Stash Files"
        }
      }
    }
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
